<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-2xl mx-auto px-4">
    <!-- ヘッダー -->
    <div class="mb-8">
      <div class="flex items-center mb-4">
        <%= link_to chats_path, class: "flex items-center text-teal-700 hover:text-teal-900 mr-4" do %>
          <span class="material-symbols-outlined mr-1">arrow_back</span>
          <span>トーク一覧に戻る</span>
        <% end %>
      </div>
      <h1 class="text-2xl font-bold text-gray-900">新しいトークを作成</h1>
      <p class="text-gray-600 mt-2">AIの名前、性格、アバター画像を設定して新しいトークを始めましょう</p>
    </div>

    <!-- AIキャラクター新規作成フォーム -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <%= render 'ai_characters/form', ai_character: @ai_character, form_url: chats_path, cancel_url: chats_path, submit_label: 'トークを作成' %>
    </div>
  </div>
</div>
