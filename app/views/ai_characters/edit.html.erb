<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-2xl mx-auto px-4">
    <!-- ヘッダー -->
    <div class="mb-8">
      <div class="flex items-center mb-4">
        <%= link_to chat_path(@ai_character.chats.first), class: "flex items-center text-teal-700 hover:text-teal-900 mr-4" do %>
          <span class="material-symbols-outlined mr-1">arrow_back</span>
          <span>チャットに戻る</span>
        <% end %>
      </div>
      <h1 class="text-2xl font-bold text-gray-900">AIキャラクター設定</h1>
      <p class="text-gray-600 mt-2">AIの名前、性格、アバター画像をカスタマイズできます</p>
    </div>

    <!-- 設定フォーム -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <%= render "ai_characters/form", ai_character: @ai_character, form_url: ai_character_path(@ai_character), cancel_url: chat_path(@ai_character.chats.first), submit_label: "設定を保存" %>
    </div>
  </div>
</div>
